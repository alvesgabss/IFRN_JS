<style>
    body{
        background-color: bisque;
    }
input[type=text], input[type=email], input[type=password] {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    outline: none;
}


input[type=submit] {
    width: 100%;
    padding: 10px;
    background-color: #0db64d;
    color: white;
    border: none;
    cursor: pointer;
}


h1 {
    text-align: center;
    font-size: 24px;
    color: #39990c;
}


.success, .error {
    color: green, red;
}
header {
            background-color: #333;
            color: white;
            padding: 1rem;
            text-align: center;
        }

        .navbar-top {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem;
            background-color: #444;
        }

        .navbar-top ul {
            list-style: none;
            display: flex;
            margin: 0;
            padding: 0;
        }

        .navbar-top li {
            margin: 0 10px;
        }

        .navbar-top a {
            color: white;
            text-decoration: none;
            font-weight: bold;
            transition: color 0.3s ease;
        }

        .navbar-top a:hover {
            color: #ffc107;
        }
</style>

<% if (successMessage) { %>
    <script>
        alert('<%= successMessage %>');
        window.location.href="/home";
    </script>
<% } %>

<% if (erroMessage) { %>
    <script>
        alert('<%= erroMessage %>');
        window.location.href="/cadastro";
    </script>
<% } %>

<h1>Formulário de cadastro</h1>

<form action="cadastrar-usuario" method="post">
    Nome: <input type="text" id="nome" name="nome" required><br><br>
    Usuário: <input type="text" id="login" name="login" required><br><br>
    Senha: <input type="password" id="senha" name="senha" required><br><br>
    CEP: <input type="text" id="cep" name="cep" required><br><br>
    Bairro: <input type="text" id="bairro" name="bairro" required><br><br>
    Rua: <input type="text" id="rua" name="rua" required><br><br>
    Número da Casa: <input type="text" id="numero" name="numeroCasa" required><br><br>
    E-mail: <input type="email" id="email" name="email" required><br><br>
    Telefone: <input type="tel" id="telefone" name="telefone" required><br><br>

    <input type="submit" value="Cadastrar">
</form>